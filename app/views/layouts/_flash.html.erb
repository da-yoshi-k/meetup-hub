<% flash.each do |type, message| %>
  <div data-controller="flash" data-flash-target="flashMessage" class="<%= flash_class(type) %> absolute top-14 left-0 mt-4 ml-4 z-50 flex items-center w-full max-w-xs p-4 mb-4 rounded-lg shadow" role="alert">
    <div class="ml-3 text-sm font-normal"><%= message %></div>
    <button data-action="flash#close" class="ml-auto mr-4">✖️</button>
  </div>
<% end %>
